    const claveInput = document.getElementById('claveInput');
    const toggleClave = document.getElementById('toggleClave');

    toggleClave.addEventListener('click', () => {
        const isHidden = claveInput.type === 'password';
        claveInput.type = isHidden ? 'text' : 'password';

        // Cambia el ícono si tienes versión cerrada
